{
   "name": "webpack-to-do-app",
   "description": "Sample To Do application powered by dna-engine and built with webpack",
   "version": "1.0.0",
   "license": "MIT",
   "type": "module",
   "module": "src/js/app.js",
   "exports": "./src/js/app.js",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/dna-engine/webpack-to-do-app.git"
   },
   "homepage": "https://github.com/dna-engine/webpack-to-do-app",
   "bugs": "https://github.com/dna-engine/webpack-to-do-app/issues",
   "docs": "https://dna-engine.org/docs",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "dna-engine",
      "webpack",
      "todo",
      "nodejs",
      "javascript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "browser": true,
      "mocha": true,
      "node": true
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf docs"
      ],
      "lint": [
         "jshint . --exclude-path .gitignore"
      ],
      "build": [
         "webpack"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean lint build",
      "test": "mocha spec",
      "posttest": "html-validator src",
      "start": "npm test && open docs/index.html"
   },
   "dependencies": {
      "dna-engine": "~3.3",
      "web-ignition": "~2.5"
   },
   "devDependencies": {
      "assert-deep-strict-equal": "~1.2",
      "css-loader": "~7.1",
      "html-webpack-plugin": "~5.6",
      "jshint": "~2.13",
      "mocha": "~11.7",
      "rimraf": "~6.1",
      "run-scripts-util": "~1.3",
      "style-loader": "~4.0",
      "w3c-html-validator": "~2.2",
      "webpack": "~5.105",
      "webpack-cli": "~6.0"
   }
}
